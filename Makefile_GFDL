# To use
#
# module load python
# module load netcdf/4.2
# module load intel_compilers
#	-rm -rf build/*



SHELL=bash


all: MIDAS

MIDAS:	fms_build/libfms.a MOM6_ALE/build_ale/libale.a
	rm -rf build/*
	(python setup_complete.py config_fc --f90flags="-nowarn -i4 -r8 -DPY_SOLO" --fcompiler=intelem build >& /dev/null)
	(${PYTHONPATH:="./local"};python setup_complete.py install --home=$(INSTALL_PATH))

fms_build/libfms.a:
	(cd fms;tar xvf fms_tikal_201312.tar)
	(cd fms; /bin/rm -rf coupler;git clone git@gitlab.gfdl.noaa.gov:fms/coupler.git)
	(cd fms; cvs co -r tikal atmos_null atmos_param ice_param ice_sis land_null ocean_null)
	(cd fms_build;./build_fms.csh)

MOM6_ALE/build_ale/libale.a: 
	(cd MOM6_ALE/build_ale;./build_ale.csh)



